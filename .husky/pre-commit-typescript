#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

# TypeScript type checking pre-commit hook
# To enable: rename this file to pre-commit (after fixing all TypeScript errors)
# Or add to existing pre-commit: pnpm check-types

echo "Running TypeScript type check..."
pnpm check-types

if [ $? -ne 0 ]; then
  echo "❌ TypeScript errors found. Please fix them before committing."
  exit 1
fi

echo "✅ TypeScript check passed!"